<div class="row">
  <h1>Lista de  estudiantes</h1>

  <%= link_to 'Agregar estudiante', new_estudiante_path, class: 'btn btn-lg btn-primary' %>
  <table class="table table-condensed table-bordered table-hover">
    <thead>
      <tr>
        <th><%= sortable "name", "Nombre" %></th>
        <th><%= sortable "apellido", "Apellido" %></th>
        <th>Direccion</th>
        <th>Celular</th>
        <th>Email</th>
        <th><%= sortable  "fecha_nac", "Fecha de Nacimiento" %></th>
        <th><%= sortable "nacionalidad", "Nacionalidad" %></th>
        <th>Estado Civil</th>
        <th>Sexo</th>
        <th>Talento</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @estudiantes.each do |estudiante| %>
        <tr>
          <td>
            <div class="dropdown">
              <a data-toggle="dropdown" href="#" class="btn btn-default btn-xs"><%= estudiante.name %></a>
              <ul class="dropdown-menu" role="menu" aria-labelledby="DatosPersonales">
                <li><%= link_to 'Mostrar todos los datos', estudiante %></li>
                <li><%= link_to 'Editar', edit_estudiante_path(estudiante) %></li>
                <li><%= link_to 'Borrar', estudiante, method: :delete, data: { confirm: 'Estas seguro de borrar?' } %></li>
              </ul>
            </div>
          </td>
          <td><%= estudiante.apellido %></td>
          <td><%= estudiante.direccion %></td>
          <td><%= estudiante.celular %></td>
          <td><%= estudiante.email %></td>
          <td><%= estudiante.fecha_nac %></td>
          <td><%= estudiante.nacionalidad %></td>
          <td><%= estudiante.estado_civil %></td>
          <td><%= estudiante.sexo %></td>
          <td><%= estudiante.talento %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
